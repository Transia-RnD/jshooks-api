{
  "name": "jshooks-api-example",
  "version": "1.0.0",
  "description": "",
  "main": "dist/npm/src/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "compbuild": "esbuild contracts/index.ts --bundle --external:./contracts/utils/extern.ts --outfile=contracts/dist/index.js --format=esm",
    "cleanbuild": "python3 hook_cleaner.py contracts/dist/index.js contracts/dist/index.js",
    "prebuild": "yarn run compbuild && yarn run cleanbuild",
    "build": "js2wasm-cli contracts/dist/index.js build/ && yarn run postbuild",
    "postbuild": "rm -rf contracts/dist",
    "lint": "eslint ./src/**/* --ext .ts",
    "format": "npx prettier --write ./src"
  },
  "author": {
    "name": "Denis Angell",
    "url": "https://github.com/dangell7"
  },
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@tsconfig/node16": "^16.1.3",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "esbuild": "^0.21.3"
  }
}
