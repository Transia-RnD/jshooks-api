{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
     "composite": true,
     "module": "preserve",
     "moduleResolution": "node",
     "sourceMap": false,
     "strict": true,
     "pretty": true,
     "target": "es6",
     "outDir": "./dist/npm",
     "declaration": true,
     "declarationMap": false,
     "strictNullChecks": false,
     "noImplicitAny": true,
     "noUnusedLocals": true,
     "removeComments": true,
     "preserveConstEnums": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "preserveSymlinks": true
   },
   "include": [
     "src/**/*.ts",
     "src/**/*.tsx",
     "src/**/*.json"
   ],
   "exclude": [
     "node_modules",
     "**/*.test.tsx",
     "**/*.test.ts",
     "**/*.spec.ts",
     "build",
     "dist",
     "example"
   ]
}
